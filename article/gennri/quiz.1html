    </div>

<!---クイズ--->

<div id="app" class="row">
    <!-- クイズを表示する部分 -->
    <div class="offset-3 col-6" v-if="!completed">
        <div class="card">
            <div class="card-body">
                <p class="badge badge-dark">第 {{ (questionIndex+1) }} 問</p>
                <br>
                <h4 class="card-title">{{ currentQuestion.question }}</h4>
                <hr>
                <button
                    type="button"
                    class="btn btn-primary btn-lg btn-block text-left"
                    v-for="(answer,index) in currentQuestion.answers"
                    @click="addAnswer(index)">{{ (index+1) }}. {{ answer }}</button>
            </div>
        </div>
    </div>

    <!-- 結果表示する部分 -->
    <div class="offset-3 col-6" v-if="completed">
        <div class="card">
            <div class="card-body">
                <p class="badge badge-dark">結果</p>
                <div v-for="(question,index) in this.questions">
                    <h4 class="card-title">{{ question.question }}</h4>
                    <ul>
                        <li v-for="answer in question.answers">{{ answer }}</li>
                    </ul>
                    <span class="correct" v-if="question.answer == answers[index]">正解です！！ ⭕️（{{ question.answers[question.answer] }}）</span>
                    <span class="incorrect" v-else>不正解 ❌<br>正解は「{{ question.answers[question.answer] }}」でした。</span>
                    <h5>＜解説等＞</h5>
                    <h5 class="explanation">{{question.explanation}}</h5>
                    <h5 class="explanation2">{{question.explanation2}}</h5>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/vue@2.5.17/dist/vue.min.js"></script>
<script>

    new Vue({
        el: '#app',
        data: {
            answers: [],
            questionIndex: 0,
            questions: [
                {
                    question: '(問1)ソクラテスの「無知の知」に達するための方法は？',
                    answers: [
                        '問題法',
                        '問答法',
                        '質問法',
                        'わからない',
                    ],
                    answer: 1,
                    explanation: 'ソクラテスの母パイナレテが産婆だったことから「産婆術（助産術）」とも言われます。',
                    explanation2: 'あ'
                },
                {
                    question: '(問2)チェコ出身で、人間そのものに焦点を当てた「直観教授」と呼ばれる教授法を用いたのは誰？',
                    answers: [
                        'ヨハネス・アモス・コメニウス',
                        'ジャン・ジャック・ルソー',
                        'ヨハン・フリードリヒ・ヘルバルト',
                        'わからない',
                    ],
                    answer: 0,
                    explanation: 'コメニウスの著書『大教授学』で子供の直観を重視する教授法として紹介されています。',
                    explanation2: 'あ'
                },
                {
                    question: '(問3)ルソーが著書『エミール』で主張した教育は？',
                    answers: [
                        '自然主義',
                        '経験主義',
                        '系統主義',
                        'わからない',
                    ],
                    answer: 0,
                    explanation: '教師が積極的に教授せず子供の感性を重視するという意味で、消極教育とも言われます。'
                },
                {
                    question: '(問4)ペスタロッチの開発教授の対義語となる考え方は？',
                    answers: [
                        '自然主義',
                        '経験主義',
                        '注入主義',
                        'わからない',
                    ],
                    answer: 2,
                    explanation: '一方的に知識を詰め込む注入主義に対して開発教授は知的能力、技術的能力、道徳的能力の調和を目指しています。'
                },
                {
                    question: '(問5)デューイの児童中心主義が元となってできた教育方法は？',
                    answers: [
                        '四段階教授法',
                        '発見学習',
                        '問題解決学習',
                        'わからない',
                    ],
                    answer: 2,
                    explanation: '子供の生活上の課題が注目され、それを解決するプロセスが問題解決学習です。\nあああ\n'
                }
            ]
        },
        methods: {
            addAnswer: function(index) {

                this.answers.push(index);

                if(!this.completed) {

                    this.questionIndex++;


                }
              }









        },
        computed: {
            currentQuestion: function() {

                return this.questions[this.questionIndex];

            },
            completed: function() {

                return (this.questions.length == this.answers.length);

            }
        }
    })

</script>

